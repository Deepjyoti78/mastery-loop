    "expandables": {
        "arr_root": {
            "definition": "A contiguous block of memory storing elements of the same type. Think of it as numbered boxes in a row.",
            "keyPoints": [
                "Fixed size (in most languages)",
                "Same data type for all elements",
                "Stored in contiguous memory",
                "0-indexed in most languages"
            ],
            "commonMistakes": [
                "Confusing index with position (0 vs 1-based)",
                "Array out of bounds errors",
                "Assuming arrays are dynamic"
            ]
        },
        "arr_memory": {
            "definition": "Arrays occupy consecutive memory addresses. Element at index i is base_address + (i × element_size).",
            "keyPoints": [
                "Elements stored back-to-back",
                "Base address + offset calculation",
                "Cache-friendly due to locality",
                "No gaps between elements"
            ],
            "commonMistakes": [
                "Thinking arrays can grow in place",
                "Ignoring memory alignment"
            ]
        },
        "arr_indexing": {
            "definition": "Access any element directly using its index in O(1) time. Index = position - 1 (for 0-based).",
            "keyPoints": [
                "Direct access via index",
                "O(1) time complexity",
                "Index range: 0 to (n-1)",
                "Negative indices invalid (in most languages)"
            ],
            "commonMistakes": [
                "Off-by-one errors",
                "Using length as valid index",
                "Not validating index bounds"
            ]
        },
        "arr_operations": {
            "definition": "Insert, delete, update, and search operations on arrays. Each has different time complexity.",
            "keyPoints": [
                "Update: O(1) - direct access",
                "Insert at end: O(1) if space available",
                "Insert at middle: O(n) - shift required",
                "Delete: O(n) - shift elements left"
            ],
            "commonMistakes": [
                "Forgetting to shift elements",
                "Not handling size changes",
                "Leaving gaps after deletion"
            ]
        },
        "arr_traversal": {
            "definition": "Visiting each element sequentially. Essential for searching unsorted arrays.",
            "keyPoints": [
                "Linear scan: O(n)",
                "Use loops (for/while)",
                "Process each element once",
                "Common in algorithms"
            ]
        },
        "arr_complexity": {
            "definition": "Time taken for array operations. Access is fast (O(1)), but insertion/deletion can be slow (O(n)).",
            "keyPoints": [
                "Access/Update: O(1)",
                "Search (unsorted): O(n)",
                "Insert/Delete (worst): O(n)",
                "Space: O(n)"
            ]
        },
        "arr_2d": {
            "definition": "Array of arrays. Visualize as a matrix with rows and columns.",
            "keyPoints": [
                "Accessed via arr[row][col]",
                "Row-major vs column-major order",
                "Useful for grids, matrices",
                "Memory still contiguous (row-major)"
            ],
            "commonMistakes": [
                "Confusing row/column order",
                "Improper nested loop bounds",
                "Not initializing inner arrays"
            ]
        },
        "arr_remedial_pointers": {
            "definition": "Pointers store memory addresses. Arrays and pointers are closely related in C/C++.",
            "keyPoints": [
                "Array name is a pointer to first element",
                "Pointer arithmetic: ptr + 1 moves by element_size",
                "arr[i] equivalent to *(arr + i)",
                "Useful for dynamic arrays"
            ]
        }
    },
